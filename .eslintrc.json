{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript",
    "prettier", //<-- add this
    "plugin:@next/next/recommended" //<-- add this
  ],
  "overrides": [],
  "parserOptions": {
    "project": ["tsconfig.json"], //<-- add this
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier" //<-- add this
  ],
  "rules": {
    "prettier/prettier": ["error"], //<-- add this
    "@typescript-eslint/no-misused-promises": [
      "error",
      { "checksVoidReturn": false }
    ], //<-- add this
    "react/prop-types": "off", // <-- add this
    "react/react-in-jsx-scope": "off", // <-- add this
    "react/jsx-props-no-spreading": "off" // <-- add this
  }
}
